		UPDATE tbl_member SET
		id = #{id},
		name = #{name},
		email = #{email}
		WHERE num = #{num};
	</update>
	<delete id = "deleteMember" parameterType = "com.wakefield.myblog.model.MemberVO">
		DELETE FROM tbl_member
